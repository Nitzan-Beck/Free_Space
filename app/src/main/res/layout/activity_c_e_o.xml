<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41123CB8"
    tools:context=".CEO">

    <Button
        android:id="@+id/buttonCEOLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:onClick="btnCEOLogout"
        android:text="Logout"
        android:textColor="#022170"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/ListViewFromCEO"
        app:layout_constraintHorizontal_bias="0.885"
        app:layout_constraintStart_toEndOf="@+id/CEOSerch"
        app:layout_constraintTop_toBottomOf="@+id/ListViewFromCEO" />

    <Button
        android:id="@+id/ChooseBuilding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:onClick="ChooseBuilding"
        android:text="Choose Building"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtCEO"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txtCEO"
        app:layout_constraintTop_toBottomOf="@+id/txtCEO" />

    <Button
        android:id="@+id/LookAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Look As...."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/ChooseBuilding"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ChooseBuilding"
        app:layout_constraintTop_toBottomOf="@+id/ChooseBuilding" />

    <Button
        android:id="@+id/CEOSerch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:onClick="Serch"
        android:text="Serch"
        android:textColor="#022170"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/ListViewFromCEO"
        app:layout_constraintTop_toTopOf="@+id/buttonCEOLogout" />

    <EditText
        android:id="@+id/CEOSerchWorker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Enter worker name"
        android:inputType="textPersonName"
        android:textColor="#000000"
        android:textColorHint="#000000"
        app:layout_constraintEnd_toEndOf="@+id/LookAs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/LookAs"
        app:layout_constraintTop_toBottomOf="@+id/LookAs" />

    <ListView
        android:id="@+id/ListViewFromCEO"
        android:layout_width="326dp"
        android:layout_height="214dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/CEOSerchWorker"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="@+id/CEOSerchWorker"
        app:layout_constraintTop_toBottomOf="@+id/CEOSerchWorker" />

    <TextView
        android:id="@+id/txtCEO"
        android:layout_width="317dp"
        android:layout_height="68dp"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:text="CEO"
        android:textColor="#F80000"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.404"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>