<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#41123CB8"
    tools:context=".Admin">


    <Button
        android:id="@+id/buttonAdminLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="124dp"
        android:gravity="center"
        android:onClick="btnAdminLogout"
        android:text="Logout"
        android:textColor="#022170"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/LookAs"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/LookAs"
        app:layout_constraintTop_toBottomOf="@+id/LookAs" />

    <Button
        android:id="@+id/DataBase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="Go to Data base"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/txtAdmin"
        app:layout_constraintHorizontal_bias="0.118"
        app:layout_constraintStart_toStartOf="@+id/txtAdmin"
        app:layout_constraintTop_toBottomOf="@+id/txtAdmin" />

    <Button
        android:id="@+id/LookAs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="Look As....."
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/DataBase"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/DataBase"
        app:layout_constraintTop_toBottomOf="@+id/DataBase" />

    <TextView
        android:id="@+id/txtAdmin"
        android:layout_width="317dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:text="Admin"
        android:textColor="#F80000"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.095" />
</androidx.constraintlayout.widget.ConstraintLayout>